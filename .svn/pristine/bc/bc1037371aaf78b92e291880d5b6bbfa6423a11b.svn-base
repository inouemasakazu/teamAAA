@charset "UTF-8";

h1 {
	margin-top: 50px;
}

.login-form {
	background-color: #708090;
    display: inline-block;
    widows: 700px;
    padding: 0 25px 0;
    margin-top: 50px;
    margin-bottom: 50px;
    line-height: 48px;
    border-radius: 10px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
}

.new-input a {
	background-color: #4169e1;
    display: inline-block;
    min-width: 180px;
    line-height: 48px;
    border-radius: 24px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
}

.new-input a:hover {
    background-color: #4682b4;
}

.login-form-flex {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.login-input {
	margin-right: 20px;
}

.new-input {
	margin-left: 20px;
}
