@charset "utf-8";

/* 全範囲の数値初期化 */
*,
::before,
::after {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

ul,
ol {
    list-style: none;
}

a {
    color: inherit;
    text-decoration: none;
}

body {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 16px;
    color: #ffffff;
    line-height: 1;
    background-color: #c8c8c8;
    text-align: center;
}

img {
    max-width: 100%;
}

/* header内の設定 */
header {
	background-color: #000000;
}

.header-inner {
    max-width: 1200px;
    height: 130px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 40px;
    padding-right: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.site-menu ul {
    display: flex;
}

.site-menu ul li{
    margin-left: 20px;
    margin-right: 20px;
}

.site-menu ul li a {
	font-family: 'Montserrat', sans-serif;
    font-weight: bold;
}

.login-area {
	background-color: #4169e1;
    display: inline-block;
    min-width: 180px;
    line-height: 48px;
    border-radius: 24px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
}

.login-area:hover {
    background-color: #4682b4;
}

/* footer内の設定 */
footer {
    color: #ffffff;
    background-color: #000000;
    padding-top: 30px;
    padding-bottom: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.footer-logo {
    display: block;
    width: 235px;
    margin-top: 50px;
    margin-bottom: 30px;
}

footer .login-area {
    margin-top: 28px;
}

.copyright {
    font-size: 14px;
    font-weight: bold;
    margin-top: 90px;
}