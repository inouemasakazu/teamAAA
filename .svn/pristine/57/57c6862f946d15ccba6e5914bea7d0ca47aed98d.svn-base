@charset "utf-8";

/* 全範囲の数値初期化 */
*,
::before,
::after {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

ul,
ol {
    list-style: none;
}

a {
    color: inherit;
    text-decoration: none;
}

body {
    font-family: 'Zen Kaku Gothic New', sans-serif;
    font-size: 16px;
    color: #000000;
    line-height: 1;
    background-color: #ffffff;
}

img {
    max-width: 100%;
}

/* header内の設定 */
header {
	background-color: #000000;
}

.header-inner {
    height: 130px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #ffffff;
}

.header-logo {
	margin-left: 40px;
}

.menu {
	margin: 0 0 0 auto;
	display: flex;
	height: 130px;
    font-size: 14px;
}

.login-area {
	background-color: #ff2d2d;
	color: #000000;
	font-weight: bold;
    display: inline-block;
    height: 130px;
    width: 130px;
    display: flex;
	justify-content: center;
	align-items: center;
	text-align: center;
}

.login-area:hover {
    background-color: #ff4747;
}

.menu p {
	margin-top: auto;;
	margin-bottom: 30px;
	margin-right: 20px;
	font-size: 18px;
}

.menu-text:hover {
  text-decoration: underline;
}

.login-menu {
	margin-top: auto;
	margin-bottom: auto;
	margin-right: 28px;
	background-color: #7fffff;
    display: inline-block;
    height: 85px;
    width: 85px;
    display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 50%;
	align-items: center;
}

.login-menu:hover {
    background-color: #adffff;
}

/* footer内の設定 */
footer {
    color: #ffffff;
    background-color: #000000;
    padding-top: 30px;
    padding-bottom: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.footer-logo {
    display: block;
    width: 235px;
    margin-top: 50px;
    margin-bottom: 30px;
}

footer .login-area {
    margin-top: 28px;
}

.copyright {
    font-size: 14px;
    font-weight: bold;
    margin-top: 90px;
}

.admin-in {
	margin: 0 20px 20px auto;
	background-color: #ff2d2d;
	display: inline-block;
	max-width: 180px;
}

/* サーチリザルトJSP */
.search-result {
	max-width: 1200px;
	width: 90%;
	margin-left: auto;
	margin-right: auto;
}

.media-row {
	margin-top: 50px;
	background-color: #d6ffff;
	border-radius: 20px;
	padding: 20px;
}

.media-flex {
	display: flex;
	justify-content: space-between;
}
