<%@page contentType="text/html; charset=UTF-8" %>

<%@include file="../html/header.html" %>
<body id="">
<%@include file="../menu/header.jsp" %>

<main class="search-result">
	<h1>検索結果</h1>

	<div class="flex">
	<c:forEach var="p" items="${list}">
	<div class="media-row">
		<form action="../action/MedPage.action" method="post">
			<h2>${p.medTitle}</h2>
			<div class="media-flex">
				<div class="media-img">
					<!-- ここ画像表示方法決まったらなおしてね -->
					<!-- <td>${p.medImage}</td> -->
					<td><img src="/teamAAA/upload/${p.medImage }" width="1000" height="1000"></td>

				</div>
				<div class="media-text">
					<dl>
						<dd>ジャンル</dd>
						<dt>${p.medGenre1}</dt>
						<dt>${p.medGenre2}</dt>
						<dd>発売年</dd>
						<dt>${p.medRelease}</dt>
						<dd>作品媒体</dd>
						<dt>${p.medMedia}</dt>
						<dd>作品内容</dd>
						<dt>${p.medInfo}</dt>
						<dd>管理コード</dd>
						<dt>${p.medCode}</dt>
						<dd>登録日時</dd>
						<dt>${p.medDate}</dt>
					</dl>
				</div>
			</div>
			<button type='submit' name='medCode' value='${p.medCode}'>詳細</button>
		</form>
	</div>
	</c:forEach>


<!-- もういちど検索するドン★用検索（検索ページと同じ） -->
	<div class="login-form">
<B>条件を変更して再検索</B><BR>


		<form action="../action/MedSearch.action" method="post">
			タイトル検索:<input type="text" name="medTitle"><br>

	        <label for="medGenre1">表現形式</label>
			<select id="medGenre1" name="medGenre1">
			<option value="">選択なし</option>
			<option value="洋画">洋画</option>
			<option value="邦画">邦画</option>
			<option value="アニメ">アニメ</option>
			<option value="人形劇">人形劇</option>
			<option value="その他">その他</option>
			</select>

			<label for="medGenre2">ジャンル</label>
			<select id="medGenre2"  name="medGenre2">
			<option value="">選択なし</option>
			<option value="アクション">アクション</option>
			<option value="コメディ">コメディ</option>
			<option value="時代劇">時代劇</option>
			<option value="成人">成人</option>
			<option value="スポーツ">スポーツ</option>
			<option value="ドキュメンタリー">ドキュメンタリー</option>
			<option value="ノンフィクション">ノンフィクション</option>
			<option value="ファンタジー">ファンタジー</option>
			<option value="ファミリー">"ファミリー</option>
			<option value="ホラー">ホラー</option>
			<option value="ミステリー">ミステリー</option>
			<option value="ミュージカル">ミュージカル</option>
			<option value="恋愛">恋愛</option>
			<option value="歴史">歴史</option>
			<option value="SF">SF</option>
			</select>


			<br>
	        <input type="submit" value="検索">
	    </form>
    </div>
    </div>


<!-- 検索フォームここまで -->
</main>

