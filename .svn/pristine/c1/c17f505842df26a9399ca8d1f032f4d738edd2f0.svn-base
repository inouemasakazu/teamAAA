		//管理者リスト表示するよ kuma

		public List<AdminBean> adminlist (String alist) throws Exception {
				List<AdminBean> list = new ArrayList<AdminBean> ();
				Connection con = getConnection();

				//消されてない（med_delete=1)はやってない
				PreparedStatement st = con.prepareStatement("select * from admin where admin_Code like ?");

			try {
					st.setString(1, "%" + alist + "%");
					ResultSet rs = st.executeQuery ();
					while (rs.next()) {
						AdminBean mb = new AdminBean();
						mb.setadminCode(rs.getInt("admin_code")); //管理者コード 自動付与
						mb.setadminId(rs.getString("admin_id")); //管理者ID　任意
						mb.setadminPass(rs.getString("admin_pass")); //管理者パスワード　任意
						mb.setadminName(rs.getString("admin_name")); //ニックネーム　任意
						mb.setadminDate(rs.getString("admin_date")); //登録日時
						list.add(mb);
					}

			}catch (Exception e) {
				throw e;
			}finally{
				st.close();
				con.close();
			}
				return list;
		}

