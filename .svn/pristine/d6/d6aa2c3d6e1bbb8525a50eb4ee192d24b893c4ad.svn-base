@charset "UTF-8";

/* index.jspのメイン画像 */
.first-view {
    height: calc(100vh - 130px);
    background-image: url(../img/movie-top.jpg);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 100% 100%;
    display: flex;
}

.first-view-text {
    width: 1200px;
    max-width: 90%;
    margin-top: 75px;
    margin-left: auto;
    margin-right: auto;
    /* align-items: flex-start; */
}

.main h1{
	font-size: 50px;
	margin-left: 50px;
}

/* 検索ボタン */
.link-button {
    background-color: #4169e1;
    display: inline-block;
    min-width: 180px;
    line-height: 48px;
    border-radius: 24px;
    font-size: 14px;
}

.link-button:hover {
    background-color: #4682b4;
}