@charset "UTF-8";

/* index.jspのメイン画像 */
.first-view {
	height: calc(100vh - 130px);
    background-image: url(../img/movie-top.jpg);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 100% 100%;
    display: flex;
}

.first-view-text {
    width: 100%;
    max-width: 1300px;
    margin-top:100px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 40px;
    padding-bottom: 80px;
    color: #ffffff;
    font-weight: bold;
    text-shadow: 3px 4px 5px #4b2c14;
}

.first-view-text h1 {
    font-size: 56px;
    line-height: 72px;
}

.first-view-text p {
    font-size: 18px;
    margin-top: 20px;
}


/* 検索ボタン */
.link-button-area {
}

.link-button {
    border-radius: 3px;
    position: relative;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 0 auto;
    min-width: 100px;
    padding: 10px 25px;
    color: #FFF;
    transition: 0.3s ease-in-out;
    font-weight: 600;
    background-color: #ff2d2d;
}
.link-button:hover {
    background-color: #ff4747;
}

